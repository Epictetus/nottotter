<div class="grid_8">
<%= tweet_style_tag %>
<form id="post-tweet" method="post" action="timeline">
  <input type="hidden" name="reply_id" value="<%=h params[:reply_id] %>" />
  <textarea name="tweet" cols="50" rows="3"><%=h "@#{params[:reply_user]} " if params[:reply_user] %></textarea>
  <br />
  <input type="submit" value="tweet" />
  <span class="indicator hidden">通信中</span>
</form>
<p><%=h flash[:tweet_error] %></p>

<table class="timeline">
<% @timeline.each do |status| %>
<%= tweet_tag status, "timeline" %>
<% end %>
</table>
</div>
<div class="grid_4">
  <img class="tweet-icon" src="<%=h current_hijacked_user.profile_image_url %>" />
  <div class="tweet-name"><%=h current_hijacked_user.screen_name %></div>
</div>
